@{
    ViewData["Title"] = "Головна";
}

<div class="container mt-4">

    <!-- HERO БЛОК -->
    <div class="container py-5">
        <div class="row align-items-center fade-in">
            <!-- Фото магазину -->
            <div class="col-md-6 mb-4 mb-md-0 text-center">
                <img src="~/images/store.jpg"
                     class="img-fluid rounded-4 shadow"
                     alt="Магазин Magic Home"
                     style="max-width: 100%; max-height: 400px; object-fit: cover;">
            </div>

            <!-- Текстовий блок -->
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-3" style="color: #a3714e; font-family: 'Poppins', sans-serif;">Magic Home</h1>
                <p class="lead mb-4" style="color: #5e4b41; font-size: 1.25rem;">
                    З нами Ваш дім буде затишний та комфортний
                </p>
                <a href="@Url.Action("Index", "Product")"
                   class="btn btn-lg px-4 py-2 rounded-pill text-white shadow"
                   style="background-color: #c89163; transition: background-color 0.3s ease;">
                    Переглянути каталог
                </a>
            </div>
        </div>
    </div>





    <!-- КАТЕГОРІЇ -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Категорії товарів</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">

            <div class="col">
                <div class="card h-100 border-0 shadow rounded-4 text-center">
                    <div class="card-body">
                        <i class="bi bi-house fs-1 text-primary"></i>
                        <h5 class="card-title mt-3">Текстиль</h5>
                        <p class="card-text">Комплекти, рушники, скатертини та інше для затишку.</p>
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="1" class="btn btn-outline-primary btn-sm mt-2 rounded-pill px-4">Переглянути</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100 border-0 shadow rounded-4 text-center">
                    <div class="card-body">
                        <i class="bi bi-cup-hot fs-1 text-success"></i>
                        <h5 class="card-title mt-3">Посуд</h5>
                        <p class="card-text">Скляний, глиняний, посуд для сервірування — все для вашої кухні.</p>
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="2" class="btn btn-outline-success btn-sm mt-2 rounded-pill px-4">Переглянути</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100 border-0 shadow rounded-4 text-center">
                    <div class="card-body">
                        <i class="bi bi-stars fs-1 text-danger"></i>
                        <h5 class="card-title mt-3">Декор</h5>
                        <p class="card-text">Аксесуари, статуетки, фоторамки, вази для затишного інтер'єру.</p>
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="3" class="btn btn-outline-danger btn-sm mt-2 rounded-pill px-4">Переглянути</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
