@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="csrf-token" content="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - МійМагазин</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Власні стилі -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #FDF6EC;
            font-family: 'Segoe UI', 'Lora', sans-serif;
            color: #4B3F36;
        }

        .btn {
            background-color: #D6A77A;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 1.5rem;
            color: white;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #BA8B61;
            }

        .card {
            background-color: #FFF8F2;
            border-radius: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
            padding: 1rem;
            transition: transform 0.2s ease, background 0.4s ease;
        }

            .card:hover {
                background: linear-gradient(145deg, #fff8f2, #f3e8dc);
                transform: translateY(-5px);
            }

        .recommended {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        media screen and (max-width: 768px) {
            .recommended

        {
            grid-template-columns: 1fr;
        }

        }

        select.form-select {
            background-color: #FFF8F2;
            border: 1px solid #D6A77A;
            border-radius: 12px;
            padding: 0.5rem 1rem;
            font-family: 'Segoe UI', 'Lora', sans-serif;
            font-size: 1rem;
            color: #4B3F36;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            select.form-select:focus {
                border-color: #BA8B61;
                box-shadow: 0 0 0 3px rgba(186, 139, 97, 0.2);
                outline: none;
            }

            select.form-select option {
                background-color: #FFF8F2;
                color: #4B3F36;
                font-family: 'Segoe UI', 'Lora', sans-serif;
            }

        .btn-add-to-cart {
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            gap: 8px;
            width: 100% !important;
            padding-top: 8px; /* рівний відступ зверху */
            padding-bottom: 8px; /* рівний відступ знизу */
            padding-left: 12px;
            padding-right: 12px;
            box-sizing: border-box;
            text-align: center;
            line-height: 1; /* щоби текст не додавав зайвий простір */
        }

            .btn-add-to-cart span {
                line-height: 1;
                display: inline-block;
            }

            .btn-add-to-cart svg {
                vertical-align: middle;
                margin: 0;
                transform: translateY(2px);
                height: 18px;
                width: 18px;
            }

            .btn-add-to-cart span {
                border: 1px;
            }

        .card-title a {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            font-size: 1.3rem;
            color: #3e3e3e;
            text-decoration: none;
        }

            .card-title a:hover {
                color: #A9825A;
                text-decoration: underline;
            }

        /* Категорії та підкатегорії */
        .card-body p.text-muted small {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            font-size: 0.9rem;
            color: #6b6b6b;
            line-height: 1.4;
        }

        /* Опис товару */
        .card-text {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            font-size: 0.95rem;
            color: #555555;
            line-height: 1.5;
            margin-top: 0.3rem;
            margin-bottom: 0.6rem;
        }

        /* Повідомлення про відсутність */
        .text-danger.fw-bold {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1rem;
        }

        /* Ціна */
        .card-footer strong.fs-5 {
            font-family: 'Roboto', 'Arial Black', sans-serif;
            font-weight: 700;
            font-size: 1.1rem;
            color: #A9825A;
        }

        /* Кнопка “Додати в кошик” */
        .btn-add-to-cart {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 600;
            font-size: 0.95rem;
            color: #fff;
            background-color: #A9825A;
            border: none;
            border-radius: 6px;
            padding: 6px 12px;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            gap: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .col-md-6 h1.display-4 {
            color: #A9825A !important; /* теплий коричневий */
            font-family: 'Poppins', sans-serif;
        }

        .col-md-6 p.lead {
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            font-size: 1.25rem;
            color: #555555;
            font-style: normal !important; /* скасувати курсив */
        }

        .added-to-cart {
            background-color: #A9825A !important;
            color: #fff !important;
            border: none !important;
        }
        .btn-add-to-cart:focus,
        .btn-add-to-cart:active {
            outline: none !important;
            box-shadow: none !important;
        }



        .bg-dark {
            background-color: #1e2226;
        }

        .text-purple {
            color: #a37df0;
        }

        .text-pink {
            color: #e05c8f;
        }

        .text-light {
            color: #f8f9fa;
        }

        .text-muted {
            color: #a1a1a1;
        }

        a.text-light:hover {
            color: #ffffff;
            text-decoration: none;
        }
        /* Navbar / Header */
        .navbar {
            background-color: #1e2226 !important; /* Темно-сірий, як у вас */
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            padding-top: 0.6rem;
            padding-bottom: 0.6rem;
        }

        /* Логотип */
        .navbar-brand {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.5rem;
            color: #f8f9fa !important;
            letter-spacing: 1px;
        }

        /* Навігаційні посилання */
        .navbar-nav .nav-link {
            font-family: 'Segoe UI', sans-serif;
            color: #c8c8c8 !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: color 0.3s ease, border-bottom 0.3s ease;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: #f8f9fa !important;
                border-bottom: 2px solid #A9825A;
            }

        /* Вітання користувача */
        .navbar-nav .nav-item span.nav-link {
            color: #f0e3d0;
            font-style: italic;
            font-weight: 400;
        }

        /* Кнопка "Вийти" */
        .btn-link.nav-link {
            color: #c8c8c8 !important;
            text-decoration: none;
            padding: 0.5rem 1rem;
            transition: color 0.3s ease;
        }

            .btn-link.nav-link:hover {
                color: #ffffff !important;
                text-decoration: underline;
            }
        .btn-available {
    background-color: #A9825A;
    color: white;
    border-radius: 1.5rem;
    padding: 0.5rem 1rem;
    font-weight: 500;
    border: none;
    transition: background-color 0.3s ease;
}

.btn-available:hover {
    background-color: #8B724A;
}

.btn-not-available {
    background-color: #6B5843;
    color: white;
    border-radius: 1.5rem;
    padding: 0.5rem 1rem;
    font-weight: 500;
    border: none;
    transition: background-color 0.3s ease;
}

.btn-not-available:hover {
    background-color: #5A4D3A;
}
.btn-available:focus,
.btn-available:active,
.btn-not-available:focus,
.btn-not-available:active {
    outline: none !important;
    box-shadow: none !important;
}
.discount-badge {
    background-color: #e07b39; /* теплий помаранчевий */
    color: #fff;
    font-weight: 600;
}

.price-old {
    color: rgba(108, 117, 125, 0.4); /* більш прозорий сірий */
    text-decoration: line-through;
    text-decoration-thickness: 1.2px; /* трохи товща лінія */
    margin-right: 0.5rem;
    font-size: 1.1rem; /* трохи більший шрифт */
    font-weight: 500;
}



.price-new {
    color: #4a7c59; /* теплий зелений */
    font-weight: 700;
    font-size: 1.25rem;
}

.price-new-only {
    color: #A9825A; /* твій теплий золотистий */
    font-weight: 700;
    font-size: 1.25rem;
}

    </style>

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Magic home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Каталог</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Users">Користувачі</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="Index">Замовлення</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Database">База даних</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">Привіт, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
    <a href="#" class="nav-link text-light" onclick="event.preventDefault(); document.getElementById('logoutForm').submit();">
        Вийти
    </a>
    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-none">
        @Html.AntiForgeryToken()
    </form>
</li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Увійти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
                <div>
                    <a asp-controller="Cart" asp-action="Index" class="position-relative cart-link" style="display:inline-block;">
                        🛒 Кошик
                        <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display:none;">
                            0
                        </span>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Контейнер з класом main-content, який займатиме доступний простір -->
    <div class="main-content container mt-4 d-flex flex-column flex-grow-1">
        <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light" style="padding-top: 2rem; padding-bottom: 1rem;">
        <div class="container">
            <div class="row">
                <div class="offset-md-1 col-md-10 d-flex">
                    <!-- Наші переваги -->
                    <div style="flex: 1; padding-left: 1.5rem;">
                        <h5 class="text-uppercase fw-bold mb-3">Наші переваги</h5>
                        <ul class="list-unstyled ps-2">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success me-2"></i> Висока якість товарів
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-truck text-info me-2"></i> Швидка доставка
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-chat-dots-fill text-warning me-2"></i> Професійна підтримка
                            </li>
                            <li>
                                <i class="bi bi-shield-lock-fill text-danger me-2"></i> Гарантія на всі товари
                            </li>
                        </ul>
                    </div>

                    <!-- Контакти -->
                    <div class="col-md-6 mb-3 pe-4 text-end">
                        <h5 class="text-uppercase fw-bold mb-3" style="display: inline-block; padding-left: 1.5rem; margin-bottom: 1rem;">
                            Контакти
                        </h5>
                        <p class="mb-2">
                            <i class="bi bi-telephone-fill text-primary me-2"></i>
                            <a href="tel:+380960589624" class="text-light text-decoration-underline">
                                +38 (096) 058-96-24
                            </a>
                        </p>
                    </div>


                </div>
            </div>

            <!-- Авторські права -->
            <div class="row mt-3">
                <div class="col-12">
                    <p class="text-end" style="color: #bbb; font-size: 0.8rem; margin-top: 0.5rem; padding-right: 1.5rem;">
                        © 2025 Magic Home. Всі права захищені.
                    </p>
                </div>
            </div>
        </div>
    </footer>












    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="statusToast" class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage">
                    Статус оновлено
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        function updateCartCount() {
            console.log('updateCartCount викликаний');
            fetch('/Cart/GetCartCount')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('HTTP помилка ' + response.status);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Отримано count:', data.count);
                    const badge = document.getElementById('cart-count');
                    if (badge) {
                        console.log('Знайдено елемент #cart-count');
                        badge.textContent = data.count;
                        badge.style.display = data.count > 0 ? 'inline-block' : 'none';
                    } else {
                        console.warn('Елемент #cart-count не знайдено!');
                    }
                })
                .catch((error) => {
                    console.error('Помилка при отриманні лічильника:', error);
                });
        }

        document.addEventListener('DOMContentLoaded', updateCartCount);
    </script>
</body>
</html>
